<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    tools:context=".CarrascoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/carrasco" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaM1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="27 MAY"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/horaM1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIE 20:00"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/lugarM1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/white"
                    android:text="BahÃ­a Sur. San Fernando"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/artistaM1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manuel Carrasco"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/entradasM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="entradas" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaM2"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04 JUN"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/horaM2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAB 19:00"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/lugarM2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auditorio Marina Sur. Valencia"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/artistaM2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manuel Carrasco"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/entradasM2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="entradas" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaM3"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 11 JUN"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/horaM3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAB 18:00"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/lugarM3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estadio de la Cartuja. Sevilla"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/artistaM3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manuel Carrasco"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/entradasM3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="entradas" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>